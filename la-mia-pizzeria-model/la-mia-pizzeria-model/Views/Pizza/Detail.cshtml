@model Pizza

@{

}

<div class="text-center">

    <h1>@Model.Name</h1>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Immagine</th>
            <th scope="col">Nome</th>
            <th scope="col">Descrizione</th>
            <th scope="col">Prezzo</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">@Model.Id</th>
                <th> <img src="@Model.ImgSrc"/> </th>
                <td>
                    @Model.Name
                </td>
                <td>@Model.Description</td>
                <td>@Model.Price</td>
            </tr> 
        </tbody>
    </table>
</div>
